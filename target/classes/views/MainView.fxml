<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.MainController">
   <center>
      <BorderPane id="login" prefHeight="380.0" prefWidth="300.0" BorderPane.alignment="CENTER">
         <center>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="180.0" prefWidth="250.0" BorderPane.alignment="CENTER">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="UserName" translateX="-6.0">
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                           <font>
                              <Font name="Nakula" size="13.0" />
                           </font>
                        </Label>
                        <TextField fx:id="userNameLabel" translateX="-5.0" />
                     </children>
                  </HBox>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Label text="Password">
                           <font>
                              <Font name="Nakula" size="13.0" />
                           </font></Label>
                        <TextField fx:id="passWordLabel" />
                     </children>
                  </HBox>
                  <BorderPane prefHeight="100.0" prefWidth="200.0">
                     <center>
                        <Button id="loginbutton" mnemonicParsing="false" onAction="#onClickLogIn" text="Log In" BorderPane.alignment="CENTER" />
                     </center>
                  </BorderPane>
                  <Label text="C" textAlignment="JUSTIFY" translateX="100.0" translateY="30.0">
                     <font>
                        <Font name="FreeSerif" size="72.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </center>
         <bottom>
            <VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="100.0" prefWidth="125.0" BorderPane.alignment="CENTER">
               <children>
                  <Button id="createaccountbutton" mnemonicParsing="false" onAction="#onClickCreateAccount" text="Create Account" />
               </children>
            </VBox>
         </bottom>
      </BorderPane>
   </center>
</BorderPane>
